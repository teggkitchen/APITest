<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8C4A4A4A"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_length_50"
        android:layout_marginBottom="@dimen/row_length_50"
        android:layout_marginTop="@dimen/row_length_25">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/row_length_30"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_left_white" />

        <TextView
            android:id="@+id/txt_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/row_length_30"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_white" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_register_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:paddingRight="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="22dp">

            <ImageView
                android:id="@+id/img_phone_label"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_phone" />


            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_phone_label"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Your phone"
                android:inputType="phone"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/customGray1"
                android:textColorHint="@color/customGray1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_16"
                android:text="0988888888"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_phone_label"
                android:layout_marginTop="10dp"
                android:background="@color/customGray2" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="22dp">

            <ImageView
                android:id="@+id/img_email_label"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_email" />


            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_email_label"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Your email"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/customGray1"
                android:textColorHint="@color/customGray1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_16"
                android:text="tt@tt.com"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_email_label"
                android:layout_marginTop="10dp"
                android:background="@color/customGray2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="22dp">

            <ImageView
                android:id="@+id/img_pw_label"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_lock_gray" />


            <EditText
                android:id="@+id/edit_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_pw_label"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Your password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/customGray1"
                android:textColorHint="@color/customGray1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_16"
                android:text="123456"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_pw_label"
                android:layout_marginTop="10dp"
                android:background="@color/customGray2" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_btn_radius_10_bg_white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>


</RelativeLayout>